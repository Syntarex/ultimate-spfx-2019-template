{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "cache": false,
            "dependsOn": ["^clean", "^build"]
        },
        "clean": {
            "cache": false,
            "dependsOn": ["^clean"]
        },
        "serve": {
            "cache": false,
            "dependsOn": ["^clean", "^build"]
        }
    }
}
