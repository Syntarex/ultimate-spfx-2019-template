{
    "compilerOptions": {
        "target": "ES5",
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "./node_modules/@microsoft"],
        "types": ["webpack-env"],
        "lib": ["ESNext", "DOM"]
    },
    "exclude": ["./lib", "./dist"]
}
